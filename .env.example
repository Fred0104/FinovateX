# FinovateX Environment Configuration Template
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=finovatex
POSTGRES_USER=finovatex_user
POSTGRES_PASSWORD=finovatex_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application Database User
FINOVATEX_DB_USER=finovatex_app
FINOVATEX_DB_PASSWORD=finovatex_app_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=finovatex_redis_password
REDIS_DB=0

# NATS Configuration
NATS_HOST=localhost
NATS_PORT=4222
NATS_HTTP_PORT=8222
NATS_CLUSTER_NAME=finovatex-cluster

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=info
APP_PORT=8080

# API Gateway Configuration
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0

# Core Engine Configuration
CORE_ENGINE_GRPC_PORT=50051
CORE_ENGINE_HOST=0.0.0.0

# Strategy Engine Configuration
STRATEGY_ENGINE_PORT=8081

# AI Module Configuration
AI_MODULE_PORT=8082

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Exchange API Configuration (Binance example)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Notification Configuration
NOTIFICATION_EMAIL_SMTP_HOST=smtp.gmail.com
NOTIFICATION_EMAIL_SMTP_PORT=587
NOTIFICATION_EMAIL_USER=your-email@gmail.com
NOTIFICATION_EMAIL_PASSWORD=your-app-password
NOTIFICATION_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
NOTIFICATION_TELEGRAM_CHAT_ID=your-telegram-chat-id

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=finovatex-backups
BACKUP_S3_REGION=us-east-1

# Performance Configuration
MAX_CONCURRENT_STRATEGIES=10
DATA_CACHE_TTL=300  # 5 minutes
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Development Configuration
HOT_RELOAD=true
ENABLE_PROFILING=false
ENABLE_DEBUG_ENDPOINTS=true
